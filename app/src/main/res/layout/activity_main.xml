<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_exp"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="exposure time(us)(default = 400000)"
        android:inputType="number" />
    <Button
        android:id="@+id/btn_takepic"
        android:layout_below="@id/editText_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="take picture"/>
    <Button
        android:id="@+id/btn_gogallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/btn_takepic"
        android:layout_centerHorizontal="true"
        android:text="take picture from gallery"/>
    <ImageView
        android:id="@+id/view_img"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="400dp"
        android:layout_height="350dp"/>

</RelativeLayout>